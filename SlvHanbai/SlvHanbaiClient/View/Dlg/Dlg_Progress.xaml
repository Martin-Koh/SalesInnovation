<custom:ExChildWindow x:Class="SlvHanbaiClient.View.Dlg.Dlg_Progress"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:custom="clr-namespace:SlvHanbaiClient.Class.UI"
           xmlns:theme="clr-namespace:SlvHanbaiClient.View.Dlg.Theme"
           Width="400" Height="100" 
           Title="処理中" 
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" 
           FontSize="14" 
           Loaded="ExChildWindow_Loaded" 
           Unloaded="ExChildWindow_Unloaded"
           HasCloseButton="False">
    <Grid x:Name="LayoutRoot" Margin="2" >
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="tbkMsg" Text="しばらくお待ちください" HorizontalAlignment="Center" FontSize="16" />
            <ProgressBar Height="20" Width="300" IsIndeterminate="True" Margin="5"/>
        </StackPanel>
        <theme:Dlg_ThemeShinyBlue x:Name="dlgThemeShinyBlue" />
        <theme:Dlg_ThemeTwilightBlue x:Name="dlgThemeTwilightBlue" />
    </Grid>
</custom:ExChildWindow>