<custom:ExUserControl x:Class="SlvHanbaiClient.View.UserControl.Custom.Utl_State"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:custom="clr-namespace:SlvHanbaiClient.Class.UI"
    mc:Ignorable="d"
    Height="Auto"
    Width="Auto">
    <Grid x:Name="LayoutRoot" >
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="2" />
            <ToggleButton x:Name="tglStillApproval" Width="42" Height="26" Content="未承認" Click="tblState_Click" Unchecked="tblState_UnChecked" Checked="tblState_Checked" />
            <TextBlock Width="2" />
            <ToggleButton x:Name="tglApproval" Width="42" Height="26" Content="承認" Click="tblState_Click" Unchecked="tblState_UnChecked" Checked="tblState_Checked" />
            <TextBlock Width="2" />
            <ToggleButton x:Name="tglResevation" Width="42" Height="26" Content="保留" Click="tblState_Click" Unchecked="tblState_UnChecked" Checked="tblState_Checked" />
            <TextBlock Width="2" />
            <ToggleButton x:Name="tglRejetion" Width="42" Height="26" Content="却下" Click="tblState_Click" Unchecked="tblState_UnChecked" Checked="tblState_Checked" />
        </StackPanel>
    </Grid>
</custom:ExUserControl>
